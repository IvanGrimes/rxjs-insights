{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/index.ts", "src/polyfills.ts"
  ],
  "exclude": [
    "**/*"
  ],
}
